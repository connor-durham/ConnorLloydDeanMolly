<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body light-green lighten-4">
      <h1 class="text-center mb-3"> Register</h1>
      
      <% include ./partials/messages %>

      <form action="/users/register" method="POST">

        <div class="form-group">
          <label for="name" class="black-text">Full Name:</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control light-green lighten-4"
            placeholder="Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"/>
        </div>
        <div class="form-group">
          <label for="email" class="black-text">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control light-green lighten-4"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"/>
        </div>
        <div class="form-group">
          <label for="password" class="black-text">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control light-green lighten-4"
            placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"/>
        </div>
        <div class="form-group">
          <label for="password2" class="black-text">Confirm Password:</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control light-green lighten-4"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
        </div>
        <button type="submit" class="btn btn-primary btn-block light-green">
          Complete Registration
        </button>
      </form>
      <p class="mt-4">Have An Account? <a href="/users/login">Login Here!</a></p>
    </div>
  </div>
</div>
