<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body light-green lighten-4">
      <h1 class="text-center mb-3">Login</h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email" class="black-text">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password" class="black-text">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"/>
        </div>
        <button type="submit" class="btn btn-primary btn-block light-green">Login</button>
      </form>
      <p class="mt-4"> No Account? <a href="/users/register">Register HERE!</a></p>
    </div>
  </div>
</div>
